<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bingo.erp.xo.order.mapper.OrderGlassDetailMapper">

    <select id="getGlassDetailPage" parameterType="com.bingo.erp.xo.order.vo.GlassInfoPageVO" resultType="com.bingo.erp.commons.entity.OrderGlassDetail">
        select * from
        t_order_glass_detail
        where status = 1
        <if test="pageVO.beginTime != null">
            and create_time &gt;= #{pageVO.beginTime}
        </if>
        <if test="pageVO.endTime != null">
            and create_time &lt;= #{pageVO.endTime}
        </if>

        order by create_time desc,sequence

    </select>

</mapper>